@page "/login"
@using Data.Models

<div class="container">
  <div class="info">
    <h1>UTECO</h1><span>Universidad Tecnológica Del Cibao Oriental </span>
  </div>
</div>
<div class="form">
  <div class="thumbnail">
    <img src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/169963/hat.svg"/>
    </div>
  <div class="login-form">
    <input @bind="Usuario.Correo" type="text" placeholder="Correo"/>
    <input @bind="Usuario.Contrasena" type="password" placeholder="Contraseña"/>
    <button @onclick="Acceder" >Login</button>
  </div>
</div>

@code{
    public Usuario Usuario { get; set; } = new Usuario();

    private void Acceder()
    {
        if(Usuario.Correo == "admin" && Usuario.Contrasena == "123"){
            urlManager.NavigateTo("/dashboard");
        }
    }
}