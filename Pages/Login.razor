@page "/login"
@using Data.Models

<div class="container">
  <div class="info">
    <h1>UTECO</h1><span>Universidad Tecnológica Del Cibao Oriental </span>
  </div>
</div>
<div class="form">
  <div class="thumbnail">
    <img src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/169963/hat.svg"/>
    <form class="register-form">
    <input type="text" placeholder="Nombre"/>
    <input type="password" placeholder="Correo"/>
    <input type="text" placeholder="Contrasena"/>
    <button>create</button>
    <p class="message">Already registered? <a href="#">Sign In</a></p>
  </form>
    </div>
  <div class="login-form">
    <input @bind="Usuario.Correo" type="text" placeholder="Correo"/>
    <input @bind="Usuario.Contrasena" type="password" placeholder="Contraseña"/>
    <button @onclick="Acceder" >Login</button>
    <p class="message">¿No registrado? <a href="#">Crea una cuenta</a></p>
  </div>
</div>

@code{
    public Usuario Usuario { get; set; } = new Usuario();

    private async void Acceder()
    {
      var result = await UsuarioServices.Login(Usuario.Correo,Usuario.Contrasena);
        if(result){
            urlManager.NavigateTo("/dashboard");
        }
    }
}